<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DAMNPractica6" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios del tema claro (Azul Marino) -->
        <item name="colorPrimary">#1A237E</item> <!-- Azul Marino oscuro -->
        <item name="colorPrimaryVariant">#000051</item> <!-- Azul Marino más oscuro para la barra de estado -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Texto blanco sobre el color primario -->

        <!-- Colores secundarios (Azul Claro, si se necesita un acento) -->
        <item name="colorSecondary">#42A5F5</item> <!-- Azul claro -->
        <item name="colorSecondaryVariant">#0077C2</item> <!-- Azul más oscuro para variantes -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Texto blanco sobre el color secundario -->

        <!-- Color de fondo y superficie -->
        <item name="android:colorBackground">#FFFFFF</item> <!-- Fondo blanco -->
        <item name="colorSurface">#FFFFFF</item> <!-- Superficie blanca -->
        <item name="colorOnSurface">#000000</item> <!-- Texto negro sobre la superficie -->

        <!-- Color de error -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
